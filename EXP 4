clc; clear;

// Given data
D12 = 2;        // m
D23 = 2;        // m
D31 = 4;        // m
d = 2.5/100;    // diameter in meters
r = d/2;

// Calculations
GMD = (D12*D23*D31)^(1/3);
GMR = 0.7788 * r;

L_per_m = 2e-7 * log(GMD/GMR);
L_per_km = L_per_m * 1000;

// Display
disp("GMD (m) = "+string(GMD));
disp("GMR (m) = "+string(GMR));
disp("Inductance per conductor (H/km) = "+string(L_per_km));
